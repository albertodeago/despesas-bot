{
	"name": "despesas-bot",
	"version": "1.13.2",
	"description": "A telegram bot to track your expenses on a google sheet",
	"main": "main.js",
	"scripts": {
		"dev": "npm run build && node ./dist/main.js",
		"build": "esbuild --bundle ./src/main.ts --platform=node --target=node24 --outfile=./dist/main.js",
		"ts:check": "tsc --noEmit",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"lint": "biome check .",
		"lint:apply": "biome check --write ."
	},
	"author": "Alberto De Agostini",
	"license": "ISC",
	"dependencies": {
		"@google-cloud/local-auth": "3.0.1",
		"@isaacs/ttlcache": "2.1.4",
		"chart.js": "4.5.1",
		"chartjs-node-canvas": "5.0.0",
		"chartjs-plugin-datalabels": "2.2.0",
		"dotenv": "17.2.3",
		"googleapis": "170.1.0",
		"node-telegram-bot-api": "0.67.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@flydotio/dockerfile": "0.7.10",
		"@types/node": "24.0.10",
		"@types/node-telegram-bot-api": "0.64.13",
		"@vitest/coverage-v8": "4.0.17",
		"esbuild": "0.27.2",
		"typescript": "5.9.3",
		"vitest": "4.0.17"
	}
}
