{
	"name": "despesas-bot",
	"version": "1.12.2",
	"description": "A telegram bot to track your expenses on a google sheet",
	"main": "main.js",
	"scripts": {
		"dev": "npm run build && node ./dist/main.js",
		"build": "esbuild --bundle ./src/main.ts --platform=node --target=node20 --outfile=./dist/main.js",
		"ts-check": "tsc --noEmit",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:apply": "biome lint --apply .",
		"check": "biome check .",
		"check:apply": "biome check --apply ."
	},
	"author": "Alberto De Agostini",
	"license": "ISC",
	"dependencies": {
		"@google-cloud/local-auth": "3.0.1",
		"@isaacs/ttlcache": "1.4.1",
		"chart.js": "^3.9.1",
		"chartjs-node-canvas": "^4.1.6",
		"chartjs-plugin-datalabels": "^2.2.0",
		"dotenv": "16.4.5",
		"googleapis": "95.0.0",
		"node-telegram-bot-api": "0.66.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@flydotio/dockerfile": "0.5.8",
		"@types/node": "20.10.2",
		"@types/node-telegram-bot-api": "0.64.7",
		"@vitest/coverage-v8": "2.0.5",
		"esbuild": "0.23.1",
		"typescript": "5.5.4",
		"vitest": "2.0.5"
	}
}
